<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_colors"
    >
    <RelativeLayout
        android:layout_below="@+id/title"
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_m_y_40"
        android:background="@color/app_white">

        <TextView
            android:id="@+id/tv_goods_points_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_m_y_12"
            android:layout_marginTop="@dimen/dp_m_y_15"
            android:text="充值账户"
            android:layout_centerVertical="true"
            android:textColor="@color/app_black"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_m_y_12"
            android:layout_alignParentRight="true"
            android:text="账户余额"
            android:layout_centerVertical="true"
            android:textColor="@color/app_black"
            android:textSize="@dimen/sp_14" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_px"
            android:background="@color/gray_bg_2"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/recharge_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_m_y_40"
        android:layout_below="@+id/info_layout"
        android:background="@color/app_white">

        <TextView
            android:id="@+id/card_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_m_y_12"
            android:text="充值金额"
            android:layout_centerVertical="true"
            android:textColor="@color/app_black"
            android:textSize="@dimen/sp_13" />


        <TextView
            android:id="@+id/tv_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_m_y_12"
            android:layout_centerVertical="true"
            android:textColor="@color/money_color"
            android:textSize="@dimen/sp_14" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/give_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_m_y_40"
            android:layout_below="@+id/recharge_layout"
            android:background="@color/app_white">

            <TextView
                android:id="@+id/give_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_m_y_12"
                android:text="赠送金额"
                android:layout_centerVertical="true"
                android:textColor="@color/app_black"
                android:textSize="@dimen/sp_13" />


            <TextView
                android:id="@+id/give_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_m_y_12"
                android:layout_centerVertical="true"
                android:textColor="@color/money_color"
                android:textSize="@dimen/sp_14" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_px"
                android:background="@color/gray_bg_2"
                android:layout_alignParentTop="true"
                />
        </RelativeLayout>
