<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alert_dialog"
    android:layout_width="@dimen/dp_m_y_250"
    android:layout_height="@dimen/dp_m_y_144"
    android:background="@drawable/icon_background"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/hint_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_m_y_20"
        android:gravity="center_horizontal"
        android:lineSpacingMultiplier="1.1"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/app_black"/>
    <TextView
        android:id="@+id/alert_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hint_text"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/sp_13"
        android:layout_marginLeft="@dimen/dp_m_y_18"
        android:text="是否要全部退款？"
        android:layout_marginTop="@dimen/dp_m_y_12"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_m_y_45"
        android:layout_alignParentBottom="true"
       >
        <View
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_px"
            android:background="@color/dialog_line_color"/>
        <ImageView
            android:id="@+id/line"
            android:layout_alignParentTop="true"
            android:layout_width="@dimen/one_px"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@color/dialog_line_color"/>
        <TextView
            android:id="@+id/alert_ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/stroke"
            android:layout_toRightOf="@+id/line"
            android:gravity="center"
            android:layout_margin="@dimen/one_dp"
            android:background="@drawable/btn_select_item"
            android:text="全部"/>
        <TextView
            android:id="@+id/alert_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/gray_text"
            android:layout_toLeftOf="@+id/line"
            android:gravity="center"
            android:layout_margin="@dimen/one_dp"
            android:background="@drawable/btn_select_item"
            android:text="取消"/>

    </RelativeLayout>

</RelativeLayout>