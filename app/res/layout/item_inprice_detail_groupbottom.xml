<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/dp_m_y_40">

    <TextView
        android:id="@+id/item_inprice_detail_groupbottom_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="right"
        android:layout_marginLeft="@dimen/dp_m_x_15"
        android:textSize="@dimen/sp_14"
        android:text="交强险和车船险小记："
        />

    <TextView
        android:id="@+id/item_inprice_detail_groupbottom_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dp_m_x_15"
        android:layout_marginLeft="@dimen/dp_m_y_10"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/app_orange"
        android:text="¥123"/>

</LinearLayout>