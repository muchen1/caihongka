<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_global"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_select_item"
    >
    <ImageView
        android:id="@+id/shop_icon"
        android:layout_width="@dimen/dp_m_y_110"
        android:layout_height="@dimen/dp_m_y_110"
        android:layout_margin="@dimen/dp_m_y_10"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_m_y_18"
        android:paddingRight="@dimen/dp_m_y_12"
        android:layout_toRightOf="@+id/shop_icon"
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/title_text"
        android:text="易车生活4S(朝阳门店)"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/tv_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:paddingRight="@dimen/dp_m_y_12"
        android:layout_toRightOf="@+id/shop_icon"
        android:textColor="@color/gray_text"
        android:layout_marginTop="@dimen/dp_m_y_8"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="北京市朝阳区朝外大街131号佳汇国际中心A座302"
        android:textSize="@dimen/sp_13" />
    <RelativeLayout
        android:id="@+id/wark_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/shop_icon"
        android:layout_marginTop="@dimen/dp_m_y_5"
        android:layout_below="@id/tv_addr">
        <ImageView
            android:id="@+id/wark_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/hp_wash_words"/>
        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/app_gray"
            android:layout_marginRight="12dp"
            android:text="3.2km"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_11" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/shop_icon"
        android:layout_marginTop="@dimen/dp_m_y_5"
        android:layout_below="@id/wark_layout">
    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/app_gray"
        android:text="评论4.9"
        android:layout_centerVertical="true"
        android:textSize="@dimen/sp_11" />
    <TextView
        android:id="@+id/tv_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_comment"
        android:layout_marginLeft="@dimen/dp_m_y_30"
        android:textColor="@color/app_gray"
        android:visibility="gone"
        android:text="653订单"
        android:textSize="@dimen/sp_11" />
        <TextView
            android:id="@+id/tv_dolly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/money_color"
            android:layout_marginRight="@dimen/dp_m_y_12"
            android:textStyle="bold"
            android:text="小车￥20"
            android:textSize="@dimen/sp_20" />
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_dolly"
            android:layout_marginLeft="@dimen/dp_m_y_10"
            android:textColor="@color/gray_text_context_3"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>




</RelativeLayout>