    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_gravity="center_horizontal"
    card_view:cardBackgroundColor="@color/app_white"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp">

    <RelativeLayout
        android:id="@+id/rl_points"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="127dp"
            android:layout_height="80dp"
            android:layout_marginLeft="@dimen/dp_m_y_15"
            android:layout_marginRight="@dimen/dp_m_y_25"
            android:layout_centerVertical="true"
            android:src="@drawable/me_rainbow_card"
            />
        <TextView
            android:id="@+id/num"
            android:layout_toRightOf="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_m_y_15"
            android:text="彩虹卡 0033445566"
            android:textStyle="bold"
            android:textColor="@color/gray_text_context_3"
            android:textSize="@dimen/sp_15" />

