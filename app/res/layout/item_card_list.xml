        <TextView
            android:visibility="gone"
            android:id="@+id/default_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/dp_m_y_15"
            android:layout_marginRight="@dimen/dp_m_y_12"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/tab_unselected_text"
            android:text="默认"
            android:layout_alignParentRight="true"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/num"
            android:layout_marginTop="@dimen/dp_m_y_5"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp_m_y_15"
            android:layout_toRightOf="@+id/image"
            >

            <TextView
                android:id="@+id/yuci"
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_gray"
                android:text="余次"
                android:textSize="@dimen/sp_13"/>

            <TextView
                android:layout_toRightOf="@+id/yuci"
                android:layout_alignParentTop="true"
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2次"
                android:layout_marginLeft="@dimen/dp_m_y_12"
                android:textColor="@color/gray_text_context_3"
                android:textSize="@dimen/sp_13"/>

            <TextView
                android:id="@+id/yue"
                android:layout_below="@+id/yuci"
                android:layout_marginTop="@dimen/dp_m_y_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_gray"
                android:text="余额"
                android:textSize="@dimen/sp_13"/>
            <TextView
                android:layout_toRightOf="@+id/yue"
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/count"
                android:layout_marginTop="@dimen/dp_m_y_2"
                android:text="20.00元"
                android:layout_marginLeft="@dimen/dp_m_y_12"
                android:textColor="@color/gray_text_context_3"
                android:textSize="@dimen/sp_13"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/unbind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_m_y_7"
            android:layout_marginRight="@dimen/dp_m_y_7"
            android:padding="@dimen/dp_m_y_5"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/app_gray"
            android:text="解绑"
            android:background="@drawable/btn_select_item"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>