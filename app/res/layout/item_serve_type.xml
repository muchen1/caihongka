<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_m_y_45"
    >

    <ImageView
        android:id="@+id/iv_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/moren"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_m_y_12"
        android:scaleType="fitCenter"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_checked"
        android:layout_marginLeft="@dimen/dp_m_y_15"
        android:layout_centerVertical="true"
        android:textSize="@dimen/sp_14"
        android:text="洗车（小车）"
        android:textColor="@color/app_black"
        />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_m_y_12"
        android:layout_marginRight="@dimen/dp_m_y_12"
        android:layout_alignParentRight="true"
        android:textColor="@color/money_color"
        android:textStyle="bold"
        android:text="￥25"
        android:textSize="@dimen/sp_14" />
    <TextView
        android:id="@+id/tv_price"
        android:layout_toLeftOf="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_m_y_10"
        android:textColor="@color/app_gray"
        android:textStyle="bold"
        android:text="现金价￥25"
        android:textSize="@dimen/sp_11" />
    <TextView
        android:visibility="gone"
        android:id="@+id/activity_price"
        android:layout_toLeftOf="@+id/tv_money"
        android:layout_marginRight="@dimen/dp_m_y_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_m_y_2"
        android:paddingBottom="@dimen/dp_m_y_2"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/dp_m_y_5"
        android:paddingRight="@dimen/dp_m_y_5"
        android:background="@drawable/bg_layout_discount_past"
        android:textColor="@color/app_white"
        android:textSize="@dimen/sp_11" />
</RelativeLayout>