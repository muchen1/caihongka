<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alert_dialog"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:background="@drawable/bg_layout_focused"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_margin="20dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="82dp">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/app_black"
            android:layout_centerHorizontal="true"
            android:text="拨打电话"/>
        <TextView
            android:layout_below="@+id/title"
            android:id="@+id/phone_num"
            android:layout_marginTop="@dimen/dp_m_y_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/app_black"
            android:layout_centerHorizontal="true"
            android:text="010-65513788"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_bg_2" />
    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"
        android:background="@color/transparent">
        <TextView
            android:layout_weight="1"
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/odds_text"
            android:text="取消"
            android:textSize="14sp"
            android:textColor="@color/app_black"
            android:background="@drawable/btn_select_item"
            android:layout_marginLeft="1dp"
            android:layout_marginBottom="1dp"
            android:gravity="center"
            />
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray_bg_2" />
        <TextView
            android:layout_weight="1"
            android:id="@+id/confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/odds_text"
            android:background="@drawable/btn_select_item"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="1dp"
            android:text="确定"
            android:textSize="15sp"
            android:textColor="@color/app_black"
            android:gravity="center"
            />
    </LinearLayout>

</LinearLayout>