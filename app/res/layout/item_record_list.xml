<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_points"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_m_y_30">

        <TextView
            android:id="@+id/num_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_m_y_12"
            android:textSize="@dimen/sp_12"
            android:text="充值账户："
            android:textColor="@color/gray_text_context_3"
            />
        <TextView
            android:id="@+id/num"
            android:layout_toRightOf="@+id/num_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_m_y_8"
            android:textSize="@dimen/sp_12"
            android:text="100861583932"
            android:textColor="@color/gray_text_context_3"
            />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_m_y_12"
            android:layout_alignParentRight="true"
            android:text="2017-01-09 17:32:48"
            android:textColor="@color/app_gray"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/dp_m_y_12"
            android:layout_marginRight="@dimen/dp_m_y_12"
            android:layout_alignParentBottom="true"
            android:background="@color/line_color" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_below="@+id/top_layout"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/recharge_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_m_y_12"
            android:text="充值金额："
            android:textColor="@color/gray_text"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/recharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_m_y_12"
            android:layout_toRightOf="@+id/recharge_text"
            android:text="100元"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/pay_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recharge_text"
            android:layout_marginLeft="@dimen/dp_m_y_12"
            android:layout_marginTop="@dimen/dp_m_y_12"
            android:text="实际支付："
            android:textColor="@color/gray_text"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recharge"
            android:layout_marginLeft="@dimen/dp_m_y_12"
            android:layout_marginTop="@dimen/dp_m_y_12"
            android:layout_toRightOf="@+id/pay_text"
            android:text="2000元"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/sp_13" />
        <TextView
            android:id="@+id/pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recharge"
            android:layout_marginRight="@dimen/dp_m_y_12"
            android:layout_marginTop="@dimen/dp_m_y_12"
            android:layout_alignParentRight="true"
            android:text="微信支付"
            android:textColor="@color/app_gray"
            android:textSize="@dimen/sp_12" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recharge"
            android:layout_marginTop="@dimen/dp_m_y_12"
            android:layout_toLeftOf="@+id/pay_type"
            android:text="支付方式：  "
            android:textColor="@color/app_gray"
            android:textSize="@dimen/sp_12" />

    </RelativeLayout>
</RelativeLayout>