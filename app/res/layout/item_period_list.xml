<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_period"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_m_y_105"
    android:orientation="horizontal"
    android:gravity="center"
    android:background="@drawable/bg_layout_focused"
    >

    <TextView
        android:id="@+id/period_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/app_black"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/count_tv"
        android:layout_below="@+id/period_tv"
        android:layout_marginTop="@dimen/dp_m_y_5"
        android:layout_marginLeft="@dimen/dp_m_y_5"
        android:layout_marginRight="@dimen/dp_m_y_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/gray_text_context_3"
        android:gravity="center"
        android:textSize="12sp"
        />
    <TextView
        android:id="@+id/give_tv"
        android:layout_below="@+id/count_tv"
        android:layout_marginTop="@dimen/dp_m_y_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/money_color"
        android:gravity="center"
        android:textSize="12sp"
        />
</RelativeLayout>