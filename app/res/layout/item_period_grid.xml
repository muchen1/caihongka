<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_m_y_60"
    android:orientation="horizontal"

    >
    <RelativeLayout
        android:id="@+id/rl_period"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_m_y_50"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_layout_focused"
        >
    <TextView
        android:id="@+id/period_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/dp_m_y_17"
        android:textColor="@color/app_black"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/count_tv"
        android:layout_toRightOf="@+id/period_tv"
        android:layout_marginLeft="@dimen/dp_m_y_25"
        android:layout_marginRight="@dimen/dp_m_y_12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="@color/gray_text_context_3"
        android:gravity="center_vertical"
        android:textSize="12sp"
        />
        </RelativeLayout>
    <LinearLayout
        android:id="@+id/give_layout"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_m_y_12"
        android:layout_marginTop="@dimen/dp_m_y_3"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/give_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_m_y_5"
            android:paddingRight="@dimen/dp_m_y_5"
            android:paddingTop="@dimen/dp_m_y_2"
            android:paddingBottom="@dimen/dp_m_y_2"
            android:gravity="center"
            android:background="@drawable/bg_layout_focused_red_full"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_8"
            android:textColor="@color/app_white"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/me_givearrow"/>
    </LinearLayout>
</RelativeLayout>