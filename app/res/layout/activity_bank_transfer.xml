<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_colors"
    android:orientation="vertical">

    <include
        android:id="@+id/head_layout"
        layout="@layout/head_panel_layout" />

    <TextView
        style="@style/person_text_style"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_m_y_50"
        android:textSize="@dimen/sp_12"
        android:gravity="bottom"
        android:text="请您通过网银转账，或者自行到银行进行汇款，汇款账号如下：" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dp_m_y_2"
        android:background="@color/gray_bg_2" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/btn_select_item">

        <TextView
            android:id="@+id/name_text"
            style="@style/person_text_style"
            android:layout_width="wrap_content"
            android:text="账户名    " />

        <Button
            android:id="@+id/copy_account"
            android:layout_width="@dimen/dp_m_y_60"
            android:layout_height="@dimen/dp_m_y_30"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            android:text="复制"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_m_y_12"
            android:background="@drawable/query_select_item"/>

        <TextView
            android:id="@+id/account_info"
            android:layout_toRightOf="@+id/name_text"
            android:layout_toLeftOf="@+id/copy_account"
            style="@style/person_text_style"
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_12"
            android:text="北京市风雨彩虹汽车俱乐部有限公司" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_bg_2" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/btn_select_item">

        <TextView
            android:id="@+id/bank_text"
            style="@style/person_text_style"
            android:layout_width="wrap_content"
            android:text="开户行    " />

        <Button
            android:id="@+id/copy_bank"
            android:layout_width="@dimen/dp_m_y_60"
            android:layout_height="@dimen/dp_m_y_30"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            android:text="复制"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_m_y_12"
            android:background="@drawable/query_select_item"/>

        <TextView
            android:id="@+id/bank_info"
            android:layout_toRightOf="@+id/bank_text"
            android:layout_toLeftOf="@+id/copy_bank"
            style="@style/person_text_style"
            android:textSize="@dimen/sp_12"
            android:layout_width="wrap_content"
            android:text="工商银行北京朝阳支行" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_bg_2" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/btn_select_item">

        <TextView
            android:id="@+id/number_text"
            style="@style/person_text_style"
            android:layout_width="wrap_content"
            android:text="银行卡号" />

        <Button
            android:id="@+id/copy_number"
            android:layout_width="@dimen/dp_m_y_60"
            android:layout_height="@dimen/dp_m_y_30"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            android:text="复制"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_m_y_12"
            android:background="@drawable/query_select_item"/>

        <TextView
            android:id="@+id/number_info"
            android:layout_toRightOf="@+id/number_text"
            android:layout_toLeftOf="@+id/copy_number"
            style="@style/person_text_style"
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_12"
            android:text="0200003419201288858" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_bg_2" />


    <RelativeLayout
        android:layout_marginTop="@dimen/dp_m_y_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_select_item"
        >
        <TextView
            android:layout_marginTop="@dimen/dp_m_y_15"
            android:id="@+id/title"
            android:layout_marginLeft="@dimen/dp_m_y_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="友情提示"
            android:textStyle="bold"
            android:textColor="@color/app_black"
            android:textSize="@dimen/sp_12" />

        <View
            android:id="@+id/line"
            android:layout_marginTop="@dimen/dp_m_y_5"
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_bg_2" />
        <TextView
            android:layout_below="@+id/line"
            android:layout_margin="@dimen/dp_m_y_12"
            android:id="@+id/service_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.受银行处理时间影响，采用银行汇款方式到账会有延误，具体到账时间以银行的实际到账时间为准\n2.银行汇款完成后返回本页面填写汇款信息，若不填写汇款信息，则不给予入账\n3.汇款信息提交后工作人员会进行核实，核实无误后汇款金额将在1个工作日内充值到您的彩虹卡账户中"
            android:textColor="@color/app_gray"
            android:lineSpacingMultiplier="1.2"
            android:textSize="@dimen/sp_12" />
    </RelativeLayout>

    <Button
        android:id="@+id/accomplish"
        style="@style/bottom_button_style"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_m_y_80"
        android:layout_marginBottom="@dimen/dp_m_y_30"
        android:text="我已汇款，提交汇款信息" />

</LinearLayout>