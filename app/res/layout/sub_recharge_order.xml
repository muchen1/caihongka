<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/succeed_color">

    <RelativeLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_layout"
        android:background="@color/succeed_color">
    </RelativeLayout>
    <TextView
        android:id="@+id/card_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_m_y_12"
        android:layout_marginLeft="@dimen/dp_m_y_12"
        android:text="充值账户"
        android:textColor="@color/app_black"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_m_y_12"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_m_y_12"
        android:layout_marginTop="@dimen/dp_m_y_12"
        android:gravity="center_vertical"
        android:textColor="@color/app_black"
        android:textSize="@dimen/sp_14" />
    <TextView
        android:visibility="gone"
        android:layout_below="@id/card_text"
        android:id="@+id/tv_goods_points_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_m_y_10"
        android:layout_marginLeft="@dimen/dp_m_y_12"
        android:text="姓名"
        android:textColor="@color/app_black"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:visibility="gone"
        android:layout_below="@id/card_text"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_m_y_12"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_m_y_12"
        android:layout_marginTop="@dimen/dp_m_y_10"
        android:gravity="center_vertical"
        android:textColor="@color/app_black"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_goods_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_m_y_12"
        android:layout_marginTop="@dimen/dp_m_y_10"
        android:text="手机"
        android:textColor="@color/app_black"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_m_y_12"
        android:layout_below="@id/tv_name"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_m_y_12"
        android:layout_marginTop="@dimen/dp_m_y_10"
        android:textColor="@color/app_black"
        android:textSize="@dimen/sp_14" />
    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_phone"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_m_y_12"
        android:layout_marginTop="@dimen/dp_m_y_10"
        android:text="充值金额"
        android:textColor="@color/app_black"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_goods_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_m_y_12"
        android:layout_below="@id/tv_phone"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_m_y_12"
        android:layout_marginTop="@dimen/dp_m_y_10"
        android:textColor="@color/app_black"
        android:textSize="@dimen/sp_14" />
    <TextView
        android:id="@+id/discount_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price_text"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_m_y_12"
        android:layout_marginTop="@dimen/dp_m_y_10"
        android:text="优惠券"
        android:textColor="@color/app_black"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_m_y_12"
        android:layout_below="@id/price_text"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_m_y_12"
        android:layout_marginTop="@dimen/dp_m_y_10"
        android:textColor="@color/app_black"
        android:textSize="@dimen/sp_14" />
    <TextView
        android:id="@+id/money_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/discount_text"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_m_y_12"
        android:layout_marginTop="@dimen/dp_m_y_10"
        android:layout_marginBottom="@dimen/dp_m_y_12"
        android:text="实付款"
        android:textColor="@color/app_black"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_m_y_12"
        android:layout_below="@id/discount_text"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_m_y_12"
        android:layout_marginTop="@dimen/dp_m_y_10"
        android:layout_marginBottom="@dimen/dp_m_y_12"
        android:textColor="@color/money_color"
        android:textSize="@dimen/sp_14" />
    <View
        android:layout_below="@id/money_text"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tab_unselected_text" />
    <View
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mask_color" />
</RelativeLayout>