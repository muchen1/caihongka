<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    android:orientation="vertical">

    <include
        android:id="@+id/head_layout"
        layout="@layout/head_panel_layout" />

    <com.rainbowcard.client.widget.LoadingFrameLayout
        android:id="@+id/v_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/shop_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/succeed_color">

                <TextView
                    android:id="@+id/shop_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_m_y_12"
                    android:layout_marginTop="@dimen/dp_m_y_20"
                    android:text="商户"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_m_y_12"
                    android:layout_marginTop="@dimen/dp_m_y_20"
                    android:textColor="@color/gray_text"
                    android:layout_toRightOf="@+id/shop_text"
                    android:layout_marginLeft="@dimen/dp_m_y_10"
                    android:gravity="right"
                    android:singleLine="true"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/service_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shop_text"
                    android:layout_marginLeft="@dimen/dp_m_y_12"
                    android:layout_marginTop="@dimen/dp_m_y_12"
                    android:text="服务类型"
                    android:textColor="@color/gray_text_context_3"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/shop_text"
                    android:layout_marginRight="@dimen/dp_m_y_12"
                    android:layout_marginTop="@dimen/dp_m_y_12"
                    android:textColor="@color/gray_text_context_3"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/order_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/service_text"
                    android:layout_marginLeft="@dimen/dp_m_y_12"
                    android:layout_marginTop="@dimen/dp_m_y_12"
                    android:text="订单金额"
                    android:textColor="@color/gray_text_context_3"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/order_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/service_text"
                    android:layout_marginRight="@dimen/dp_m_y_12"
                    android:layout_marginTop="@dimen/dp_m_y_12"
                    android:textColor="@color/gray_text_context_3"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/coupon_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_text"
                    android:layout_marginLeft="@dimen/dp_m_y_12"
                    android:layout_marginTop="@dimen/dp_m_y_12"
                    android:text="优惠券"
                    android:textColor="@color/gray_text_context_3"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/coupon_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/order_text"
                    android:layout_marginRight="@dimen/dp_m_y_12"
                    android:layout_marginTop="@dimen/dp_m_y_12"
                    android:textColor="@color/gray_text_context_3"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/pay_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/coupon_text"
                    android:layout_marginRight="@dimen/dp_m_y_12"
                    android:layout_marginTop="@dimen/dp_m_y_12"
                    android:textColor="@color/money_color"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/pay_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/coupon_text"
                    android:layout_marginLeft="@dimen/dp_m_y_12"
                    android:layout_marginTop="@dimen/dp_m_y_12"
                    android:text="实付款"
                    android:textColor="@color/gray_text_context_3"
                    android:textSize="@dimen/sp_13" />

                <View
                    android:layout_below="@+id/pay_price"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/dp_m_y_20"
                    android:background="@color/tab_unselected_text" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/pay_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_m_y_40"
                android:layout_below="@+id/shop_layout"
                android:layout_marginTop="@dimen/dp_m_y_30"
                android:background="@color/white"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/hp_pay_success" />


                <TextView
                    android:id="@+id/yue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_m_y_12"
                    android:layout_toRightOf="@+id/icon"
                    android:text="购买成功"
                    android:textColor="@color/tab_unselected_text"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/code_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pay_layout"
                android:layout_marginTop="@dimen/dp_m_y_20"
                android:background="@color/white"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="您的订单数字码为"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/sp_14" />


                <TextView
                    android:id="@+id/code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/text"
                    android:text="45444"
                    android:textColor="@color/money_color"
                    android:textSize="@dimen/sp_18" />
            </RelativeLayout>

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/code_layout"
                android:layout_centerHorizontal="true"
                android:text="请到店凭数字码消费"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:id="@+id/bt_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info"
                android:layout_marginTop="@dimen/dp_m_y_30">

                <Button
                    android:id="@+id/fulfill_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_m_y_40"
                    android:layout_marginLeft="@dimen/dp_m_y_12"
                    android:layout_marginRight="@dimen/dp_m_y_12"
                    android:layout_weight="1"
                    android:background="@drawable/bg_layout_focused_blue"
                    android:gravity="center"
                    android:text="完成"
                    android:textColor="@color/tab_unselected_text"
                    android:textSize="@dimen/sp_15" />

                <Button
                    android:id="@+id/detail_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_m_y_40"
                    android:layout_marginLeft="@dimen/dp_m_y_12"
                    android:layout_marginRight="@dimen/dp_m_y_12"
                    android:layout_weight="1"
                    android:background="@drawable/query_select_item"
                    android:gravity="center"
                    android:text="订单详情"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <ImageView
                android:visibility="gone"
                android:id="@+id/finance_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_m_y_80"
                android:layout_alignParentBottom="true"
                android:background="@drawable/finance_bg"/>
        </RelativeLayout>
    </com.rainbowcard.client.widget.LoadingFrameLayout>
</RelativeLayout>