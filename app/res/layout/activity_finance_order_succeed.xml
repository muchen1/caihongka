<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    android:orientation="vertical">

    <include
        android:id="@+id/head_layout"
        layout="@layout/head_panel_layout" />

    <com.rainbowcard.client.widget.LoadingFrameLayout
        android:id="@+id/v_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head_layout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/shop_layout"
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:background="@color/succeed_color">

                <TextView
                    android:id="@+id/shop_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_m_y_12"
                    android:layout_marginTop="@dimen/dp_m_y_25"
                    android:text="彩虹卡免费洗车项目"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/service_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/shop_text"
                    android:layout_marginLeft="@dimen/dp_m_y_12"
                    android:layout_marginTop="@dimen/dp_m_y_10"
                    android:text="参与金额"
                    android:textColor="@color/gray_text_context_3"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/shop_text"
                    android:layout_marginRight="@dimen/dp_m_y_12"
                    android:layout_marginTop="@dimen/dp_m_y_10"
                    android:textColor="@color/money_color"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/order_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/service_text"
                    android:layout_marginLeft="@dimen/dp_m_y_12"
                    android:layout_marginTop="@dimen/dp_m_y_10"
                    android:text="期限"
                    android:textColor="@color/gray_text_context_3"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tv_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/service_text"
                    android:layout_marginRight="@dimen/dp_m_y_12"
                    android:layout_marginTop="@dimen/dp_m_y_10"
                    android:textColor="@color/gray_text_context_3"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/coupon_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_text"
                    android:layout_marginLeft="@dimen/dp_m_y_12"
                    android:layout_marginTop="@dimen/dp_m_y_10"
                    android:text="获得免费洗车券"
                    android:textColor="@color/gray_text_context_3"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tv_free_wash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/order_text"
                    android:layout_marginRight="@dimen/dp_m_y_12"
                    android:layout_marginTop="@dimen/dp_m_y_10"
                    android:textColor="@color/money_color"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/coupon_text"
                    android:layout_marginRight="@dimen/dp_m_y_12"
                    android:layout_marginTop="@dimen/dp_m_y_10"
                    android:textColor="@color/gray_text_context_3"
                    android:textSize="@dimen/sp_13" />

                <TextView
                    android:id="@+id/pay_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/coupon_text"
                    android:layout_marginLeft="@dimen/dp_m_y_12"
                    android:layout_marginTop="@dimen/dp_m_y_10"
                    android:text="到期时间"
                    android:textColor="@color/gray_text_context_3"
                    android:textSize="@dimen/sp_13" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/tab_unselected_text" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/pay_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_m_y_40"
                android:layout_below="@+id/shop_layout"
                android:layout_marginTop="@dimen/dp_m_y_50"
                android:background="@color/white"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/hp_pay_success" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_m_y_12"
                    android:layout_toRightOf="@+id/icon"
                    android:text="参与成功"
                    android:textColor="@color/tab_unselected_text"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold" />
            </RelativeLayout>

            <TextView
                android:id="@+id/hint_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_below="@+id/pay_layout"
                android:layout_marginTop="@dimen/dp_m_y_30"
                android:layout_centerHorizontal="true"
                android:textColor="@color/gray_text"
                android:gravity="center_horizontal"
                android:textSize="@dimen/sp_14" />


            <LinearLayout
                android:id="@+id/bt_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hint_text"
                android:layout_marginTop="@dimen/dp_m_y_50">

                <Button
                    android:id="@+id/return_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_m_y_40"
                    android:layout_marginLeft="@dimen/dp_m_y_12"
                    android:layout_marginRight="@dimen/dp_m_y_12"
                    android:layout_weight="1"
                    android:background="@drawable/bg_layout_focused_blue"
                    android:gravity="center"
                    android:text="完成"
                    android:textColor="@color/tab_unselected_text"
                    android:textSize="@dimen/sp_15" />

                <Button
                    android:id="@+id/continue_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_m_y_40"
                    android:layout_marginLeft="@dimen/dp_m_y_12"
                    android:layout_marginRight="@dimen/dp_m_y_12"
                    android:layout_weight="1"
                    android:background="@drawable/query_select_item"
                    android:gravity="center"
                    android:text="继续参与"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_15" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bt_layout"
                android:layout_marginTop="@dimen/dp_m_y_5"
                android:background="@color/white"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="邀请好友参与，您可获得更多免费洗车券，"
                    android:textColor="@color/gray_text"
                    android:textSize="@dimen/sp_13" />


                <TextView
                    android:id="@+id/participation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/text"
                    android:text="立即邀请好友"
                    android:background="@drawable/btn_select_item"
                    android:padding="@dimen/dp_m_y_5"
                    android:textColor="@color/stroke"
                    android:textSize="@dimen/sp_13" />
            </RelativeLayout>

        </RelativeLayout>
    </com.rainbowcard.client.widget.LoadingFrameLayout>
</RelativeLayout>