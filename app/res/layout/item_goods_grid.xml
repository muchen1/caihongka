<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_goods"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_m_y_160"
    android:background="@color/app_white"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:id="@+id/image_layout"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:background="@drawable/bg_goods_frame">
        <ImageView
            android:id="@+id/image"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/one_px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/me_rainbow_card"
            />
    </RelativeLayout>

    <TextView
        android:layout_below="@+id/image_layout"
        android:layout_marginTop="@dimen/dp_m_y_8"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5元无门槛洗车优惠券"
        android:singleLine="true"
        android:textColor="@color/gray_text"
        android:textSize="14sp"
        />
    <TextView
        android:id="@+id/integral"
        android:layout_below="@+id/name"
        android:layout_marginTop="@dimen/dp_m_y_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/money_color"
        android:text="5000分"
        android:textSize="@dimen/sp_13"
        />

    <TextView
        android:id="@+id/exchange_btn"
        android:layout_below="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_m_y_10"
        android:layout_marginTop="@dimen/dp_m_y_5"
        android:background="@drawable/bg_layout_focused_blue"
        android:gravity="center"
        android:padding="@dimen/dp_m_y_5"
        android:text=" 兑 换 "
        android:textColor="@color/stroke"
        android:textSize="@dimen/sp_12" />
</RelativeLayout>