<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebeaea">

    <include
        android:id="@+id/head_layout"
        layout="@layout/head_panel_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_m_y_15"
                android:paddingRight="@dimen/dp_m_x_15"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/item_header_carnum_icon"
                    android:layout_width="@dimen/dp_m_x_25"
                    android:layout_height="@dimen/dp_m_x_25"
                    android:src="@color/app_blue" />

                <TextView
                    android:id="@+id/item_header_carnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_m_y_5"
                    android:layout_toRightOf="@id/item_header_carnum_icon"
                    android:text="京QB57B8"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_20" />

                <TextView
                    android:id="@+id/item_header_line1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_header_carnum_icon"
                    android:layout_marginTop="@dimen/dp_m_y_10"
                    android:text="发动机号："
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/item_header_text_fdjh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/item_header_line1_1"
                    android:layout_below="@id/item_header_carnum_icon"
                    android:layout_toRightOf="@id/item_header_line1_1"
                    android:text="038***" />

                <TextView
                    android:id="@+id/item_header_line1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/item_header_line1_1"
                    android:layout_below="@id/item_header_carnum_icon"
                    android:layout_marginLeft="@dimen/dp_m_y_50"
                    android:layout_toRightOf="@id/item_header_text_fdjh"
                    android:text="车架号："
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/item_header_text_cjh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/item_header_line1_1"
                    android:layout_below="@id/item_header_carnum_icon"
                    android:layout_toRightOf="@id/item_header_line1_2"
                    android:text="038***" />

                <TextView
                    android:id="@+id/item_header_line2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_header_line1_1"
                    android:layout_marginTop="@dimen/dp_m_y_10"
                    android:text="投保险种："
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/item_header_text_bxxz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/item_header_line2_1"
                    android:layout_below="@id/item_header_line1_1"
                    android:layout_toRightOf="@id/item_header_line2_1"
                    android:text="6个险种" />

                <TextView
                    android:id="@+id/item_header_line2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/item_header_line1_2"
                    android:layout_alignTop="@id/item_header_line2_1"
                    android:layout_below="@id/item_header_line1_2"
                    android:layout_toRightOf="@id/item_header_text_fdjh"
                    android:text="保险合计："
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/item_header_text_bxhj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/item_header_line2_2"
                    android:layout_alignTop="@id/item_header_line2_1"
                    android:text="¥3681.07"
                    android:textColor="@color/app_orange" />

                <TextView
                    android:id="@+id/item_header_line3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_header_line2_1"
                    android:layout_marginTop="@dimen/dp_m_y_10"
                    android:text="交强险起保日期："
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/item_header_line3_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/item_header_line3"
                    android:layout_toRightOf="@id/item_header_line3"
                    android:text="2018-11-05" />

                <TextView
                    android:id="@+id/item_header_line3_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/item_header_line3"
                    android:text="修改"
                    android:textColor="@color/cal_color_green" />

                <ImageView
                    android:id="@+id/item_header_line3_editicon"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_alignTop="@id/item_header_line3"
                    android:layout_toLeftOf="@id/item_header_line3_edit"
                    android:src="@drawable/set_fk" />

                <TextView
                    android:id="@+id/item_header_line4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_header_line3"
                    android:layout_marginTop="@dimen/dp_m_y_10"
                    android:text="商业险起保日期："
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/item_header_line4_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/item_header_line4"
                    android:layout_toRightOf="@id/item_header_line4"
                    android:text="2018-11-05" />

                <TextView
                    android:id="@+id/item_header_line4_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/item_header_line4"
                    android:text="修改"
                    android:textColor="@color/cal_color_green"
                    />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:src="@drawable/set_fk"
                    android:layout_toLeftOf="@id/item_header_line4_edit"
                    android:layout_alignTop="@id/item_header_line4"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_m_y_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_m_x_15"
                android:background="@color/white">
                <TextView
                    android:id="@+id/item_personinfo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_m_y_5"
                    android:layout_marginBottom="@dimen/dp_m_y_5"
                    android:text="车主信息"/>

                <TextView
                    android:id="@+id/item_personinfo_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_m_y_7"
                    android:layout_marginBottom="@dimen/dp_m_y_7"
                    android:layout_below="@id/item_personinfo_title"
                    android:text="车主姓名："/>

                <TextView
                    android:id="@+id/item_personinfo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/item_personinfo_name_title"
                    android:layout_toRightOf="@id/item_personinfo_name_title"
                    android:textColor="@color/app_black"
                    android:text="孙拓"/>

                <TextView
                    android:id="@+id/item_personinfo_cardtype_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_m_y_7"
                    android:layout_marginBottom="@dimen/dp_m_y_7"
                    android:layout_below="@id/item_personinfo_name_title"
                    android:text="证件类型："/>

                <TextView
                    android:id="@+id/item_personinfo_cardtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/item_personinfo_cardtype_title"
                    android:layout_toRightOf="@id/item_personinfo_cardtype_title"
                    android:textColor="@color/app_black"
                    android:text="身份证"/>

                <TextView
                    android:id="@+id/item_personinfo_cardnum_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_m_y_7"
                    android:layout_marginBottom="@dimen/dp_m_y_7"
                    android:layout_below="@id/item_personinfo_cardtype_title"
                    android:text="证件号："/>

                <TextView
                    android:id="@+id/item_personinfo_cardnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/item_personinfo_cardnum_title"
                    android:layout_toRightOf="@id/item_personinfo_cardnum_title"
                    android:textColor="@color/app_black"
                    android:text="110105198******111"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_m_x_15"
                android:paddingRight="@dimen/dp_m_x_15"
                android:layout_marginTop="@dimen/dp_m_y_10"
                android:background="@color/white">

                <TextView
                    android:id="@+id/item_insurance_assured_line1_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginTop="@dimen/dp_m_y_5"
                    android:layout_marginBottom="@dimen/dp_m_y_5"
                    android:text="被保险人信息"/>

                <TextView
                    android:id="@+id/item_insurance_assured_line1_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/item_insurance_assured_line1_title"
                    android:textStyle="bold"
                    android:textColor="@color/cal_color_green"
                    android:textSize="@dimen/sp_14"
                    android:text="修改"/>

                <TextView
                    android:id="@+id/item_insurance_assured_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_insurance_assured_line1_title"
                    android:layout_marginTop="@dimen/dp_m_y_7"
                    android:layout_marginBottom="@dimen/dp_m_y_7"
                    android:text="被保险人姓名："/>

                <TextView
                    android:id="@+id/item_insurance_assured_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/item_insurance_assured_name_title"
                    android:layout_toRightOf="@id/item_insurance_assured_name_title"
                    android:text="孙拓"
                    android:textColor="@color/app_black"
                    />

                <TextView
                    android:id="@+id/item_insurance_assured_cardtype_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_insurance_assured_name_title"
                    android:layout_marginTop="@dimen/dp_m_y_7"
                    android:layout_marginBottom="@dimen/dp_m_y_7"
                    android:text="证件类型："/>

                <TextView
                    android:id="@+id/item_insurance_assured_cardtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/item_insurance_assured_cardtype_title"
                    android:layout_toRightOf="@id/item_insurance_assured_cardtype_title"
                    android:text="身份证"
                    android:textColor="@color/app_black"
                    />

                <TextView
                    android:id="@+id/item_insurance_assured_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_insurance_assured_cardtype_title"
                    android:layout_marginTop="@dimen/dp_m_y_7"
                    android:layout_marginBottom="@dimen/dp_m_y_7"
                    android:text="证件号："/>

                <TextView
                    android:id="@+id/item_insurance_assured_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/item_insurance_assured_card_title"
                    android:layout_toRightOf="@id/item_insurance_assured_card_title"
                    android:text="110105198******111"
                    android:textColor="@color/app_black"
                    />

                <TextView
                    android:id="@+id/item_insurance_assured_telnum_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_insurance_assured_card_title"
                    android:layout_marginTop="@dimen/dp_m_y_7"
                    android:layout_marginBottom="@dimen/dp_m_y_7"
                    android:text="手机号："/>

                <TextView
                    android:id="@+id/item_insurance_assured_telnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/item_insurance_assured_telnum_title"
                    android:layout_toRightOf="@id/item_insurance_assured_telnum_title"
                    android:text="13699219652"
                    android:textColor="@color/app_black"
                    />

                <TextView
                    android:id="@+id/item_insurance_assured_mailnum_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_insurance_assured_telnum_title"
                    android:layout_marginTop="@dimen/dp_m_y_7"
                    android:layout_marginBottom="@dimen/dp_m_y_7"
                    android:text="电子邮箱："/>

                <TextView
                    android:id="@+id/item_insurance_assured_mailnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/item_insurance_assured_mailnum_title"
                    android:layout_toRightOf="@id/item_insurance_assured_mailnum_title"
                    android:text="建议填写，可收取电子保单"
                    android:textColor="@color/app_gray_masking"
                    />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>