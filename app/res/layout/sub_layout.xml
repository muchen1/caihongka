<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_colors">

    <TextView
        android:id="@+id/title"
        android:layout_below="@id/head_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_m_y_12"
        android:layout_marginBottom="@dimen/dp_m_y_8"
        android:layout_marginTop="@dimen/dp_m_y_15"
        android:text="查询结果"
        android:textColor="@color/app_black"
        android:textSize="@dimen/sp_12" />

    <RelativeLayout
        android:id="@+id/balance_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:background="@drawable/bg_layout_rainbow">

        <TextView
            android:id="@+id/tv_goods_points_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_m_y_45"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_m_y_12"
            android:text="余额:"
            android:textColor="@color/app_black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_m_y_45"
            android:layout_toRightOf="@+id/tv_goods_points_label"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_m_y_12"
            android:textColor="@color/app_black"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tv_goods_points_label"
            android:background="@color/gray_bg_2" />

        <TextView
            android:id="@+id/tv_goods_price_label"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_m_y_45"
            android:layout_below="@id/tv_balance"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_m_y_12"
            android:text="余次:"
            android:textColor="@color/app_black"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_m_y_45"
            android:layout_toRightOf="@+id/tv_goods_price_label"
            android:layout_below="@id/tv_balance"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_m_y_12"
            android:textColor="@color/app_black"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_pay"
        android:layout_marginTop="@dimen/dp_m_x_20"
        android:layout_marginRight="@dimen/dp_m_y_35"
        android:layout_below="@+id/balance_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="去充值"
        android:textColor="@color/stroke"
        android:textSize="@dimen/sp_16"
        />
</RelativeLayout>