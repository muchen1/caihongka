<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_m_y_65"
    android:paddingLeft="@dimen/dp_m_y_20"
    android:paddingRight="@dimen/dp_m_y_12"
    android:background="@color/app_white">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/me_withdrawals"/>

    <RelativeLayout
        android:layout_toRightOf="@+id/icon"
        android:layout_marginLeft="@dimen/dp_m_y_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_black"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_text"
            android:layout_marginTop="@dimen/dp_m_y_2"
            android:textColor="@color/app_gray"
            android:textSize="@dimen/sp_11" />
    </RelativeLayout>


    <TextView
        android:id="@+id/count_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/money_color"
        android:textStyle="bold"
        android:textSize="@dimen/sp_16" />
</RelativeLayout>