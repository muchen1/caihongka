<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@color/bg_colors"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <include
        android:id="@+id/head_layout"
        layout="@layout/head_panel_layout" />

    <TextView
        android:id="@+id/recharge_title"
        android:layout_below="@+id/info_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_m_y_50"
        android:layout_marginLeft="@dimen/dp_m_y_12"
        android:text="彩虹卡免费洗车项目"
        android:gravity="bottom"
        android:textColor="@color/gray_text_context_3"
        android:paddingBottom="@dimen/dp_m_y_7"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_m_y_45"
        android:background="@color/app_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_m_y_12"
            android:text="可用余额"
            android:layout_centerVertical="true"
            android:textColor="@color/app_black"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_m_y_12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/money_color"
            android:textSize="@dimen/sp_14" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_px"
            android:background="@color/gray_bg_2"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_m_y_45"
        android:background="@color/app_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_m_y_12"
            android:text="参与金额"
            android:layout_centerVertical="true"
            android:textColor="@color/app_black"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_m_y_12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/money_color"
            android:textSize="@dimen/sp_14" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_px"
            android:background="@color/gray_bg_2"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_m_y_45"
        android:background="@color/app_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_m_y_12"
            android:text="期限"
            android:layout_centerVertical="true"
            android:textColor="@color/app_black"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_m_y_12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/app_black"
            android:textSize="@dimen/sp_14" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_px"
            android:background="@color/gray_bg_2"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_m_y_45"
        android:background="@color/app_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_m_y_12"
            android:text="获得免费洗车券"
            android:layout_centerVertical="true"
            android:textColor="@color/app_black"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_free_wash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_m_y_12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/money_color"
            android:textSize="@dimen/sp_14" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_px"
            android:background="@color/gray_bg_2"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_m_y_45"
        android:background="@color/app_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_m_y_12"
            android:text="到期时间"
            android:layout_centerVertical="true"
            android:textColor="@color/app_black"
            android:textSize="@dimen/sp_13" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_m_y_12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/app_black"
            android:textSize="@dimen/sp_14" />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_px"
            android:background="@color/gray_bg_2"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/affirm_pay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_m_y_45"
        android:background="@drawable/query_select_item"
        android:text="确认支付"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/app_white"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_m_y_12"
        android:layout_marginRight="@dimen/dp_m_y_12"
        android:layout_marginTop="@dimen/dp_m_y_80"
        />
</LinearLayout>